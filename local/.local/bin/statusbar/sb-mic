#!/bin/sh
# sb-mic: Muestra y controla el estado del micr贸fono (Captura).
# Utiliza ALSA (amixer).

case $BLOCK_BUTTON in
    1) amixer set Capture toggle > /dev/null ;; # Clic izquierdo para silenciar/activar
    3) notify-send " M贸dulo de Micr贸fono" "- Muestra si el micr贸fono est谩 activo o silenciado.\n- Clic izquierdo para alternar." ;;
    6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Obtiene el estado y muestra el 铆cono correspondiente
if amixer get Capture | grep -q "\[on\]"; then
    echo "" # Micr贸fono activo
else
    echo "" # Micr贸fono silenciado
fi
